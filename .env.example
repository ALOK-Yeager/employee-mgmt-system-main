# Environment variables for the integrated Employee Management System
# Copy this file to .env and update the values

# Database Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your-secure-mongo-password-here
MONGO_DB=employee_mgmt

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-characters

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Together AI Configuration (for chatbot)
TOGETHERAI_API_KEY=your-together-ai-api-key-here

# Email Configuration (optional - for chatbot email notifications)
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-16-digit-app-password

# API Base URLs (update for production deployment)
NEXT_PUBLIC_API_BASE=http://localhost:5000
NEXT_PUBLIC_CHATBOT_BASE=http://localhost:5001

# Service Ports (change if needed)
BACKEND_PORT=5000
FRONTEND_PORT=3000
CHATBOT_PORT=5001
MONGO_PORT=27017

# Production settings
NODE_ENV=production
CHATBOT_HOST=0.0.0.0